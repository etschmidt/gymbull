<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <span><%= profile_picture_for(current_user, size: :profile) %></span>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Favorites:</b> <%= @user.favorite_posts.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>