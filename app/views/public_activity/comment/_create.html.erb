<li class="activity">
<%= link_to activity.owner.name, activity.owner if activity.owner %>
commented on  
<% if activity.trackable && activity.trackable.post %>
	<% if (current_user = activity.trackable.post.user) %>
		<%= link_to "your post", activity.trackable.post %> <span class="admin"><%= time_tag activity.trackable.created_at %></span>
	<% elsif activity.trackable.post.title? %>
		<%= link_to activity.trackable.post.title, activity.trackable.post %> <span class="admin"><%= time_tag activity.trackable.created_at %></span>
	<% else %>
		<%= link_to activity.trackable.post.id, activity.trackable.post %> <span class="admin"><%= time_tag activity.trackable.created_at %></span> 
	<% end %>
<% else %>
	a post that has since been removed
<% end %>
</li>