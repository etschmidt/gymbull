<% provide(:title, @title) %>
<div class="row">

  <div class="col-md-1">
    <%= render 'layouts/header' %>
  </div>
  
  <div class="col-md-6 col-md-offset-2">
    <h1>Sign up <span class="new-user">- User</span><span class="new-gym">- Gym</span></h1>

    <li class="no-bullets new-user"><%= render 'new_user' %></li>
    <li class="no-bullets new-gym"><%= render 'new_gym' %></li>
  </div>
  

</div>

<script>

$(document).ready(function(){
  
  $(".new-user").show();
  $(".new-gym").hide();
  
  $(".form-toggle").click(function(){
    $(".form-toggle").toggleClass("active");
    $(".new-user").toggle();
    $(".new-gym").toggle();
  });
  
});

</script>