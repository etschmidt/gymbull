<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= picture_for(@user, size: 150) %>
      <h1><%= @user.name %></h1>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
      <% if @user.location? %> Location: <%= @user.location %></br><% end %>
      <% if @user.about? %> About: <%= @user.about %></br><% end %>
      <% if @user.height? %> Height: <%= @user.height %> in.</br><% end %>
      <% if @user.weight? %> Weight: <%= @user.weight %> lbs.</br><% end %>
      <% if @user.goals? %> Goals: <%= @user.goals %></br><% end %>
      <% if @user.prs? %> Personal Records: <%= @user.prs %></br><% end %>
      <% if @user.quals? %> Qualifications: <%= @user.quals %></br><% end %>
      <% if current_user?(@user) %>
        <%= link_to "Edit Profile", edit_user_path(current_user) %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>