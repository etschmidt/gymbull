<% provide(:title, @title) %>
<div class="container">
	<div class="row">
  
    <aside class="col-md-3">
      <div class="panel panel-default">
        <section class="user_info panel-body">
          <span><%= profile_picture_for(@user, size: :profile) %></span>
          <h1><%= @user.name %></h1>
          <div class="stats">
            <%= render 'shared/stats' %>
          </div>
            <span><%= link_to "view profile", @user, :class => 'btn btn-default btn-md' %></span>
          <span><b>Posts:</b> <%= @user.posts.count %></span>
        </section>
      </div>
    </aside>
  
  <div class="col-md-6">
    <div class="title-bar bar">
      <h1><%= @count %></h1>
    </div>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
</div>