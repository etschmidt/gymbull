<!-- General -->
<title><%= full_title(yield(:title)) %></title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">
<meta name="description" content="<%= meta_description(yield(:page_desc)) %>">

<!-- Open Graph -->
<meta property="og:title" content="<%= full_title(yield(:title)) %>" />
<meta property="og:image" content="<%= meta_pic(yield(:page_pic)) %>">
<meta property="og:description" content="A Culture of Fitness" />

<!-- Twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@theGymBull">
<meta name="twitter:creator" content="@theGymBull">
<meta name="twitter:image" content="<%= meta_pic(yield(:page_pic)) %>">