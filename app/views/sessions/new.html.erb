<% provide(:title, "Log in") %>
<div class="row">
  <div class="col-md-1">
    <%= render 'layouts/header' %>
  </div>
  
  <div class="loginpage col-md-11 col-md-offset-1">
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="header-content">
                        <div class="header-content-inner panel panel-default">
                          <div class="login panel-body">
                            <h1>A Culture of Fitness Without the Bullshit</h1>
                              <%= form_for(:session, url: login2_path) do |f| %>
                          
                                <%= f.label :email %>
                                <%= f.email_field :email, class: 'form-control' %>
                          
                                <%= f.label :password %>
                                <span class="has-tooltip" data-toggle="tooltip" title="Must contain: at least 8 characters, 
                                                                                    at least 1 uppercase, 1 lowercase, and 1 number">
                                  <span class="glyphicon glyphicon-info-sign"></span>
                                </span>
                                
                                <%= f.password_field :password, class: 'form-control' %>
                                
                                <%= f.label :remember_me, class: "checkbox inline" do %>
                                  <%= f.check_box :remember_me %>
                                  <span>Remember me on this computer</span> 
                                <% end %>
                          
                                <%= f.submit "Log in", class: "btn btn-primary" %>
                              <% end %>
                          
                            <p>New user? <%= link_to "Sign up now!", signup_path %><br>
                            Forgot your password? <%= link_to "Reset password", new_password_reset_path %></p>      
                          </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="device-container">
                        <%= image_tag "boxjump.jpg", id: "boxjump", size: "314x551" %>
                    </div>
                </div>
            </div>
        </div>
    </header>
